<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape>
            <solid
                android:color="#ffffff">
            </solid>

            <corners android:radius="3dp" />

            <padding
                android:bottom="10dp"
                android:left="10dp"
                android:right="10dp"
                android:top="10dp" />

            <stroke
                android:width="2dp"
                android:color="#f9ba10"/>
        </shape>
    </item>
    <item
        android:gravity="bottom|right"
        android:drawable="@drawable/ic_keyboard_arrow_down_24px"></item>
</layer-list>